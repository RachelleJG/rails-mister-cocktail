<div>
  <div class="banner">
    <h1>Cocktails</h1>
  </div>

  <div>
    <% @cocktails.each do |cocktail| %>
      <h3>
        <%= link_to cocktail.name, cocktail_path(cocktail[:id]) %>
      </h3>
      <%= cl_image_tag cocktail.photo, height: 300, width: 400, crop: :fill %>
    <% end %>
  </div>


  <%= link_to 'New Cocktail', new_cocktail_path , class: 'btn btn-primary'%>
</div>


